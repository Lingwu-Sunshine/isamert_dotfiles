external-url-viewer "urlview"

bind-key U show-urls

bind-key j down
bind-key k up

bind-key j next articlelist
bind-key k prev articlelist

bind-key K prev-feed articlelist
bind-key J next-feed articlelist

bind-key h quit
bind-key l open

bind-key u pageup
bind-key d pagedown
bind-key g home
bind-key G end

bind-key a toggle-article-read

browser "$BROWSER %u"

# Macro prefix key: ,
# ,o → open in cli browser
# ,r → open in rtv
# ,y → yank url
# ,p → play with mpv
# ,m → play with mpd (youtube videos, mp3s etc)
macro o set browser "$CBROWSER %u"; open-in-browser ; set browser "$BROWSER %u"
macro r set browser "rtv -l %u"; open-in-browser ; set browser "$BROWSER %u"
macro y set browser "echo -n %u | xclip -selection clipboard"; open-in-browser ; set browser "$BROWSER %u"
macro p set browser "tsp mpv --geometry=-15-10 %u"; open-in-browser ; set browser "$BROWSER %u"
macro m set browser "mpd-yt add %u"; open-in-browser ; set browser "$BROWSER %u"
