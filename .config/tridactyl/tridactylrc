sanitise tridactyllocal tridactylsync

colors dark
set searchengine duckduckgo
set editorcmd st nvim
set hintfiltermode vimperator-reflow

" key-bindings
bind <A-.> tabnext
bind <A-,> tabprev
bind + zoom 0.1 true
bind - zoom -0.1 true

" commands
command withUrl composite get_current_url |
command sync open localhost:8384
command mpv withUrl ! mpv --x11-name=youtube --geometry=853x480-20-20
command mpvHint hint -W ! mpv
command mpd withUrl ! mpd-yt play
command mpdHint hint -W ! mpd-yt play
command mpdAdd withUrl ! mpd-yt add
command mpdAddHint hint -W ! mpd-yt play

" Some useful default keybindings:
" >> and << => move tab
" C-i (in imode) => open editor

" vim: set filetype=vim:
