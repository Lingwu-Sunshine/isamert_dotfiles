set incsearch on
set previewer ~/.config/lf/preview

cmd q                    quit
cmd edit                 ${{ jaro --method=edit "$f" }}
cmd view                 ${{ jaro --method=view "$f" }}
cmd renamedir            ${{ vidir }}
cmd dirrename            ${{ vidir }}
cmd bulkrename           ${{ vidir $fx }}
cmd extract              ${{ aunpack $fx }}
cmd compress             ${{ apack $1 $fx }}

# Useful defaults:
#map y copy
#map d cut
#map p paste
#map $ shell
#map ! shell-wait

map e     edit
map v     view
map D     delete
map r     rename
map <f-2> rename
map .     set hidden!
