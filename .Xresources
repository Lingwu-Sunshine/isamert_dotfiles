#include ".config/model"
! .model file contains a line that defines the model of current computer, like:
! #define X220 1
! So that I can set different values for different computers on this file based
! on the machine I have.

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! GRUVBOX colors
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
#define BACKGROUND #282828
#define FOREGROUND #ebdbb2
#define COLOR0  #282828
#define COLOR8  #928374
#define COLOR1  #cc241d
#define COLOR9  #fb4934
#define COLOR2  #98971a
#define COLOR10 #b8bb26
#define COLOR3  #d79921
#define COLOR11 #fabd2f
#define COLOR4  #458588
#define COLOR12 #83a598
#define COLOR5  #b16286
#define COLOR13 #d3869b
#define COLOR6  #689d6a
#define COLOR14 #8ec07c
#define COLOR7  #a89984
#define COLOR15 #ebdbb2

! 0. Black           8.  Dark grey
! 1. Dark red        9.  Red
! 2. Dark green      10. Green
! 3. Dark yellow     11. Yellow
! 4. Dark blue       12. Blue
! 5. Dark magenta    13. Magenta
! 6. Dark cyan       14. Cyan
! 7. Light grey      15. White

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! st (terminal)
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
st.termname: st-24bit
st.shell: /bin/fish
st.font: IBM Plex Mono:pixelsize=14:antialias=true:autohint=true
st.alpha: 0.85
st.borderpx: 1
st.xfps: 300
st.actionfps: 75

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Machine dependent stuff
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
#ifdef N550JK
sp.top.geometry: 190x30
sp.bot.geometry: 150x30
menu.file_contents.width: 190
#endif

#ifdef X220
sp.top.geometry: 150x30
sp.bot.geometry: 150x20
menu.file_contents.geometry: 150
#endif

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! bspwm settings (wm for window manager)
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
wm.gaps: 0
wm.border: 2

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! polybar (top bar)
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
bar.font0: IBM Plex Sans:fontformat=truetype:size=11:antialias=false;0
bar.font1: Ubuntu Mono Nerd Font:fontformat=truetype:size=13:antialias=false;0
bar.font2: Liberation Sans:fontformat=truetype:size=11:antialias=false;0
!bar.font2: siji:pixelsize=10;1
bar.border: 0
bar.radius: 0
bar.height: 30
bar.width: 100%

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! rofi (app launcher)
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
rofi.lines: 15
rofi.width: 70
rofi.columns: 1
rofi.padding: 10
rofi.fullscreen: false
rofi.auto-select: false
rofi.color-enabled: true
rofi.hide-scrollbar: true
rofi.separator-style: solid
rofi.font: xos4 Terminus 12
rofi.drun-show-actions: true
rofi.case-sensitive: false
rofi.matching: normal

rofi.color-window: #222222, #222222, #b1b4b3
rofi.color-normal: #222222, #b1b4b3, #222222, #005577, #b1b4b3
rofi.color-active: #222222, #b1b4b3, #222222, #007763, #b1b4b3
rofi.color-urgent: #222222, #b1b4b3, #222222, #77003d, #b1b4b3

! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Generic color settings
! !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
*background: BACKGROUND
*foreground: FOREGROUND
*color0:  COLOR0
*color8:  COLOR8
*color1:  COLOR1
*color9:  COLOR9
*color2:  COLOR2
*color10: COLOR10
*color3:  COLOR3
*color11: COLOR11
*color4:  COLOR4
*color12: COLOR12
*color5:  COLOR5
*color13: COLOR13
*color6:  COLOR6
*color14: COLOR14
*color7:  COLOR7
*color15: COLOR15
