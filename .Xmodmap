! https://askubuntu.com/a/4023

! Unmap capslock
clear Lock
keycode 66 = Hyper_L

! Leave mod4 as windows key _only_
remove mod4 = Hyper_L

! Set mod3 to capslock
add mod3 = Hyper_L

! Fix my bluetooth keyboard
keycode 166 = Escape
keycode 248 = Super_L

! AltGr + l -> Î»
keycode  46 = l L l L U03BB Oslash oslash
